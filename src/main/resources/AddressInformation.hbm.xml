<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="edu.uic.cs.postalservice.model.AddressInformation" table="ADDRESS_INFORMATION1" lazy="false">
        <meta attribute="class-description">
            This class contains the Address Information
        </meta>
        <id name="address_id" type="int" column="ADDRESS_ID">
            <generator class="native"/>
        </id>
        <property name="street_name" column="STREET_NAME"/>
        <property name="city" column="CITY"/>
        <property name="state" column="STATE"/>
        <property name="zipcode" column="ZIPCODE"/>
    </class>

</hibernate-mapping>